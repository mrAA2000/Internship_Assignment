    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#0C131A">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
